# Server Configuration
PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/eztutor_dev
DB_SSL=false
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=
DB_NAME=eztutor_dev
DB_PORT=5432

# Authentication & Security
JWT_SECRET=change_me_in_production
JWT_EXPIRATION=7d

# Groq API (AI Service)
GROQ_API_KEY=gsk_your_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT_MS=20000
GROQ_MAX_RETRIES=2

# Optional: API Key Gating
# If set, all /api endpoints require the x-api-key header
EZTUTOR_API_KEY=

# Template Mode (for development without AI calls)
# Set to "template" to use mock data instead of calling Groq
EZTUTOR_MODE=

# Frontend Configuration
REACT_APP_API_BASE=http://localhost:5000

# Google Drive / OAuth (Phase 1)
# Create OAuth credentials in Google Cloud Console and paste values here.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Encryption key for sensitive token storage (hex-encoded 32 bytes)
# Generate with: `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`
ENCRYPTION_KEY=

# Frontend base URL for OAuth redirect after approval
FRONTEND_BASE_URL=http://localhost:3000
